<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/nav.ejs') %>

            <div class="body-box">

                <div id="category-box-login">

                    <div class="dropdown-guitar">

                        <a class="nav-dropdown-a" href="/product_category/guitar">
                            <h5 class="dropdown-h5">Guitars</h5>
                        </a>
                        <div class="dropdown-content-guitar">
                            <p>Sub1</p>
                        </div>

                    </div>


                    <div class="dropdown-bass">
                        <a class="nav-dropdown-a" href="/product_category/bass">
                            <h5 class="dropdown-h5">Basses</h5>
                        </a>
                        <div class="dropdown-content-bass">
                            <p>Sub1</p>
                        </div>

                    </div>

                    <div class="dropdown-effects">
                        <a class="nav-dropdown-a" href="/product_category/effects">
                            <h5 class="dropdown-h5">Effects</h5>
                        </a>
                        <div class="dropdown-content-bass">
                            <p>Sub1</p>
                        </div>

                    </div>

                </div>

                
                <div class="login-signup-box">
                    <div class="login">
                        <h3>Login</h3>
                        <% if(error) { %>
                            <p style="color: red">
                                <%= error %>
                            </p>
                            <% } %>

                                <form action="/users/login" method="post">
                                    <input type="email" name="email" placeholder="email@example.com"><br>
                                    <input type="password" name="password" placeholder="******"><br>
                                    <input type="submit" value="Login">
                                </form>
                    </div>
                    <hr>
                   
                    <div class="signup">
                        <h3>Sign Up</h3>
                        <% if(error) { %>
                            <p style="color: red">
                                <%= error %>
                            </p>
                            <% } %>
                                <form action="/users/register" method="post">
                                    <input type="email" name="email" placeholder="email@example.com"><br>
                                    <input type="password" name="password" placeholder="******"><br>
                                    <input type="submit" value="SignUp">
                                </form>
                    </div>
                </div>
                <footer id="dt-show-footer-fixed">
                    <div class="footer-box">
                        <a class="footer-a" href="/product_category/contact">Contact Us</a>
                        <span id="copyright">&#169 James Smith</span>
                        <span style="font-size: 2.2em; color: white;">
                            <a class="footer-a" href="https://github.com/jwsmith2340" target="_blank"><i
                                    class="fa fa-github-square"></i></a>
                            <a class="footer-a" href="https://www.linkedin.com/in/jwsmith2340/" target="_blank"><i
                                    class="fa fa-linkedin-square"></i></a>
                        </span>
                    </div>
                </footer>
            </div>
    </body>

</html>
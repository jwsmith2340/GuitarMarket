<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>

    <body>

        <div class="main">
            <%- include('../partials/nav.ejs') %>
            
                <div id="category-box">
                    <h3 class="mob-category-box-cart">Shopping Cart</h3>
                </div>       
        </div>

        <% let count = 0; %>
        <ul class="mob-all-pro-display">
            <% cart.forEach(pro=> { %>
                <% count += pro.price + .99%>
                <div class="mob-cart-display">
                    <div class="mob-cart-display-image">
                        <img src="<%= pro.image %>" class="mob-cart-image">
                    </div>
                    <div class="mob-product-cart-info">
                        <p class="mob-cart-p">$<%= pro.price %>.99<br></p>
                        <% if (pro.price > 99) { %>
                            <p class="mob-cart-p-shipping">Ships for Free!</p>
                        <% } %>

                        <form class="mob-cart-delete-form" action="/cart/<%= pro._id %>?_method=DELETE" method="post">
                            <input class="mob-cart-delete-form-button" type="submit" value="Remove From Cart">
                        </form>

                    </div>
                </div>
                <% }) %>
        </ul>

        <div class="mob-total-checkout">
            <h4 class="mob-total-checkout-h4">Subtotal: $<%= count.toFixed(2) %></h4>
            <% if (count > 99) { %>
                <p class="mob-cart-p-shipping">Your Order Ships for Free!</p>
            <% } %>
            <button class="mob-checkout-button">Proceed to Checkout</button>
        </div>

        <footer id="cart-footer">
            <div class="footer-box">
                <a class="footer-a" href="https://www.youtube.com/watch?v=dQw4w9WgXcQ" target="_blank">Contact Us</a>
                <span id="copyright">&#169 James Smith</span>
                <span style="font-size: 2.2em; color: white;">
                    <a class="footer-a" href="https://github.com/jwsmith2340" target="_blank"><i
                            class="fa fa-github-square"></i></a>
                    <a class="footer-a" href="https://www.linkedin.com/in/jwsmith2340/" target="_blank"><i
                            class="fa fa-linkedin-square"></i></a>
                </span>
            </div>
        </footer>

    </body>

</html>